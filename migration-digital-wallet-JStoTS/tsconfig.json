{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "**/*.d.ts", "types/**/*"]
}