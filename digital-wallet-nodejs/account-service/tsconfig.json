{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["node", "jsonwebtoken"],
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*",
    "./types"
  ],
  "exclude": ["node_modules", "dist"]
}